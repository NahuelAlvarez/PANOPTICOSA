@model IEnumerable<PanopticoSA.Models.Domicilio>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create" class="btn btn-primary"> + Nuevo </a>
</p>
<table class="table table-hover table-responsive"
       id="AreaTable">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Calle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Departamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Piso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Provincia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ciudad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Barrio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdPersonaNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Calle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departamento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Piso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Provincia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ciudad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Barrio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPersonaNavigation.IdPersona)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdDomicilio">Modificar</a>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdDomicilio">Detalles</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdDomicilio">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @section Scripts {
        <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
        <script>
        $(document).ready(function () {
            $('#AreaTable').DataTable();
              responsive: true,
              paging: false,
              scrollY: 400,
                searching: false,
                  select:true,

                ordering: false

        });
        </script>
    }
