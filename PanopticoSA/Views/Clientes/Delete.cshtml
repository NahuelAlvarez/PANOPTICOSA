@model PanopticoSA.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}



<h3>Seguro que desea borrar este cliente?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdPersonaNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPersonaNavigation.IdPersona)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCliente" />
        <input type="submit" value="Borrar" class="btn btn-danger" />
    </form>
    <hr />
    <a asp-action="Index" class="btn btn-dark"> << Regresar</a>
</div>
